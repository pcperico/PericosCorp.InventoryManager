<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="PericosCorp.InventoryManager.Domain.Entities.Buy" table="buy">    
   <id column="Id" name="Id" >
     <generator class="native" />
   </id> 
   <property column="NumRef" name="NumRef" type="string" />
   <property column="Date" name="Date" type="date" />   
   <many-to-one name="Provider" class="PericosCorp.InventoryManager.Domain.Entities.Provider" fetch="select" lazy="false">
            <column name="Provider_Id" not-null="true" />
   </many-to-one>
    <set name="BuyDetails" table="buydetail" inverse="true" cascade="save-update" lazy="false" fetch="select">
            <key>
                <column name="Buy_Id" not-null="true" />
            </key>
            <one-to-many class="PericosCorp.InventoryManager.Domain.Entities.BuyDetail" />
   </set>   
 </class> 
</hibernate-mapping>